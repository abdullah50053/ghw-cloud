Mac:
curl "https://awscli.amazonaws.com/AWSCLIV2.pkg" -o "AWSCLIV2.pkg"
sudo installer -pkg AWSCLIV2.pkg -target /

aws configure

aws lambda create-function \
    --function-name ghw \
    --runtime python3.13 \
    --role arn:aws:iam::076787256278:role/ghw \
    --handler lambda_function.lambda_handler \
    --zip-file fileb://function.zip

aws lambda list-functions

aws apigateway create-rest-api --name "ghwapi"

aws apigateway get-resources --rest-api-id YOUR_API_ID

aws apigateway create-resource \
    --rest-api-id YOUR_API_ID \
    --parent-id YOUR_RESOURCE_ID \
    --path-part chatbot

aws apigateway put-method \
    --rest-api-id YOUR_API_ID \
    --resource-id YOUR_NEW_RESOURCE_ID \
    --http-method POST \
    --authorization-type "NONE"

aws apigateway put-integration \
    --rest-api-id YOUR_API_ID \
    --resource-id YOUR_NEW_RESOURCE_ID \
    --http-method POST \
    --type AWS_PROXY \
    --integration-http-method POST \
    --uri arn:aws:apigateway:YOUR_LOCATION_HERE:lambda:path/2015-03-31/functions/ARN_HERE/invocations
